<div class="container py-5">
  <h3>Companies</h3>

  <%= link_to "+ Create a Company", new_company_path %><br>

  <% if @companies.empty? %>
    <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
        <a href="<%= company_path(company) %>" class="list-group-item list-group-item-action bg-primary text-white">
          Company: <%= company.name %>
        </a>

        <%= link_to 'Edit Company', edit_company_path(company), class: 'list-group-item list-group-item-action bg-info text-white' %>
        <%= link_to 'Delete Company', company_path(company), method: :delete, class: 'list-group-item list-group-item-action bg-danger text-white', data: { confirm: 'Are you sure?' } %>
      <% end %>
    </ul>
  <% end %>
</div>
